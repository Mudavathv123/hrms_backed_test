# ============================================================================
# HRM Backend - Production Environment Variables
# ============================================================================
# Copy this file to .env and update values for your environment

# ============================================================================
# Database Configuration
# ============================================================================
DB_URL=jdbc:mysql://mysql:3306/hrm
DB_USERNAME=hrm_user
DB_PASSWORD=your-secure-password-here

# MySQL specific
MYSQL_DATABASE=hrm
MYSQL_PORT=3306

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_PORT=8080

# ============================================================================
# JWT Configuration
# ============================================================================
# IMPORTANT: Change these values in production
JWT_SECRET=your-very-long-and-secure-secret-key-for-jwt-tokens-change-this
JWT_EXPIRATION=86400000

# ============================================================================
# AWS S3 Configuration
# ============================================================================
# Storage type: s3 or local
FILE_STORAGE=s3

# AWS Region
AWS_REGION=ap-south-1

# S3 Bucket Name
AWS_S3_BUCKET=hrms-employee-docs

# AWS Credentials (use IAM role in production instead)
# DO NOT commit these to version control!
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ============================================================================
# File Upload Configuration (sizes in MB)
# ============================================================================
MAX_FILE_SIZE=20MB
MAX_REQUEST_SIZE=20MB

# Profile image max size (MB)
FILE_IMAGE_MAX_SIZE=5

# Document max size (MB)
FILE_DOCUMENT_MAX_SIZE=10

# Payslip PDF max size (MB)
FILE_PAYSLIP_MAX_SIZE=20

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com

# ============================================================================
# Java JVM Configuration
# ============================================================================
# G1 garbage collector recommended for production
JAVA_OPTS=-XX:+UseG1GC -XX:MaxRAMPercentage=75.0 -XX:InitialRAMPercentage=25.0

# ============================================================================
# Container Configuration
# ============================================================================
# Time zone for application
TZ=Asia/Kolkata

# ============================================================================
# Additional Production Settings
# ============================================================================
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Enable HTTPS (if using reverse proxy)
SERVER_SSL_ENABLED=false

# Maximum database connection pool size
DB_POOL_SIZE=20

# Connection timeout (in seconds)
DB_TIMEOUT=30

# ============================================================================
# AWS ALB/Load Balancer Configuration (if using)
# ============================================================================
# Health check path
HEALTH_CHECK_PATH=/api/health

# ============================================================================
# CloudWatch Monitoring (optional)
# ============================================================================
# AWS_CLOUDWATCH_ENABLED=true
# AWS_CLOUDWATCH_REGION=ap-south-1
